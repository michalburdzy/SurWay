{
  "name": "surway",
  "version": "1.0.0",
  "description": "secure app for creating surways for a low price",
  "main": "app.js",
  "author": "michal burdzy",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.4",
    "http-proxy-middleware": "^0.19.0",
    "mongoose": "^5.3.8",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "react-stripe-checkout": "^2.6.3",
    "stripe": "^6.15.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "scripts": {
    "start": "node app.js",
    "server": " nodemon --inspect app.js",
    "client": "yarn --cwd client start",
    "dev": "concurrently \"yarn server\" \"yarn client\" --kill-others-on-fail",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn add --prefix client && yarn build --profix client"
  }
